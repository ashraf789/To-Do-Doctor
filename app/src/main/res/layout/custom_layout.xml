                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/appointmentHintTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.20.20"
                    android:id="@+id/custom_textAppointmentDate"/>
        </RelativeLayout>


</LinearLayout>