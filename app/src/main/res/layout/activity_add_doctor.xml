<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_doctor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#90caf9"
    android:gravity="center"
    tools:context="net.a6te.lazycoder.tododoctor.AddDoctor">

    <LinearLayout
        android:background="@drawable/custom_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <TextView
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="18sp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:layout_marginLeft="10dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/doctorNameEt"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/custom_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <TextView
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="18sp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email : "
            android:layout_marginLeft="10dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/doctorEmailEt"/>

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/custom_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <TextView
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="18sp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Phone : "
            android:layout_marginLeft="10dp"/>
        <EditText
            android:inputType="phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/doctorPhoneEt"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/custom_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <TextView
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="18sp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Details : "
            android:layout_marginLeft="10dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/doctorDetailsEt"/>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/custom_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <TextView
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="18sp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Appointment"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/appointmentBtn"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:onClick="appointmentBtn"
            android:text="10.2.17"/>
    </LinearLayout>


    <Button
        android:fontFamily="serif"
        android:id="@+id/addNewDoctorBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Add new doctor"
        android:textAllCaps="false"
        android:onClick="addNewAppointment"/>
</LinearLayout>
