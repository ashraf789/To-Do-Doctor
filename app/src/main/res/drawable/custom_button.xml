<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="1dp"
                android:color="#505050"/>
            <corners
                android:radius="7dp" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>

            <solid android:color="#505050"/>

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ab47bc"
                android:endColor="@color/colorPrimary"
                android:angle="180"></gradient>
            <stroke
                android:width="1dp"
                android:color="#4f42d4c1"/>
            <corners
                android:radius="7dp" />

            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp"/>

        </shape>
    </item>
</selector>